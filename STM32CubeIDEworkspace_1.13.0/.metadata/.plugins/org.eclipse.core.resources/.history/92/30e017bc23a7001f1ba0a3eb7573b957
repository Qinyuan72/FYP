/* USER CODE BEGIN 0 */

void SPI_ClockTest(void) {
    uint8_t dummyTxData = 0xFF;
    uint8_t dummyRxData = 0x00;

    HAL_GPIO_WritePin(MCP3008_CS_PORT, MCP3008_CS1_PIN, GPIO_PIN_RESET); // Assert CS

    for (int i = 0; i < 10; i++) { // Loop to generate multiple clock pulses
        HAL_SPI_TransmitReceive(&hspi2, &dummyTxData, &dummyRxData, 1, HAL_MAX_DELAY);
    }

    HAL_GPIO_WritePin(MCP3008_CS_PORT, MCP3008_CS1_PIN, GPIO_PIN_SET); // Deassert CS
}





void SPI_TransmitReceive(uint8_t chip, uint8_t channel) {
    // 准备 MCP3008 的命令
    txData[0] = 0x01; // 起始�?
    txData[1] = (0x80 | (channel << 4)); // �?�端模�?，动�?设置 channel
    txData[2] = 0x00; // 空字节

    // 根�?�指定的 chip 选择 CS
    if (chip == 1) {
        HAL_GPIO_WritePin(MCP3008_CS_PORT, MCP3008_CS1_PIN, GPIO_PIN_RESET);
        HAL_GPIO_WritePin(MCP3008_CS_PORT, MCP3008_CS2_PIN, GPIO_PIN_SET);
    } else {
        HAL_GPIO_WritePin(MCP3008_CS_PORT, MCP3008_CS1_PIN, GPIO_PIN_SET);
        HAL_GPIO_WritePin(MCP3008_CS_PORT, MCP3008_CS2_PIN, GPIO_PIN_RESET);
    }

    // SPI �?��?和接收
    HAL_Delay(1); // 短暂延迟
    HAL_SPI_TransmitReceive(&hspi2, txData, rxData, 3, HAL_MAX_DELAY);
    HAL_Delay(1); // 短暂延迟

    // �?�消选中所有 CS
    HAL_GPIO_WritePin(MCP3008_CS_PORT, MCP3008_CS1_PIN | MCP3008_CS2_PIN, GPIO_PIN_SET);

    // 处�?�接收到的数�?�
    uint16_t result = ((rxData[1] & 0x03) << 8) | rxData[2];
    printf("Chip %d, Channel %d, Result: %u\n", chip, channel, result);
}


void UART_ReceiveCommand() {
    if (HAL_UART_Receive(&huart2, uartRxBuffer, sizeof(uartRxBuffer), 1000) == HAL_OK) {
        printf("Received: %s\r\n", uartRxBuffer);
    }
}
