/* USER CODE BEGIN PD */
#define SER_Pin GPIO_PIN_7
#define SRCLK_Pin GPIO_PIN_5
#define RCLK_Pin GPIO_PIN_6
#define SER_Port GPIOA
#define SRCLK_Port GPIOA
#define RCLK_Port GPIOA
/* USER CODE END PD */

/* Private macro -------------------------------------------------------------*/
/* USER CODE BEGIN PM */

/* USER CODE END PM */

